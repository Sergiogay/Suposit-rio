def coletar_nomes():
    nomes = []
    
    while True:
        nome = input("Digite nomes para transformar em escravos (digite 'yametekudasai' se já estiver satisfeito): ")
        
        if nome.lower() == 'yametekudasai':
            break
        
        nomes.append(nome)
    
    print("\nSeus novos escravos são:")
    for nome in nomes:
        print(nome)

# Chama a função para executar
if __name__ == "__main__":
    coletar_nomes()
